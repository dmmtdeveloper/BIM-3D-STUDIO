---
export interface Props {
  company: string;
  project: string;
  testimonial: string;
  rating?: number;
  logo?: string;
}

const { company, project, testimonial, rating = 5, logo } = Astro.props;

// Generate initials from company name
const getInitials = (name: string) => {
  return name
    .split(' ')
    .map(word => word.charAt(0))
    .join('')
    .toUpperCase()
    .slice(0, 2);
};

const initials = getInitials(company);
---

<div class="bg-white rounded-xl p-6 shadow-md hover:shadow-xl transition-all duration-300 border border-gray-200 group">
  <!-- Header with Avatar and Company Info -->
  <div class="flex items-center mb-4">
    <div class="w-12 h-12 bg-primary text-white rounded-lg flex items-center justify-center font-bold text-lg mr-4">
      {initials}
    </div>
    <div>
      <h3 class="font-semibold text-gray-900 text-lg">{company}</h3>
      <p class="text-sm text-gray-600">{project}</p>
    </div>
  </div>

  <!-- Rating Stars -->
  <div class="flex items-center mb-4">
    {Array.from({ length: 5 }, (_, i) => (
      <svg 
        xmlns="http://www.w3.org/2000/svg" 
        width="24" 
        height="24" 
        viewBox="0 0 24 24" 
        fill="none" 
        stroke="currentColor" 
        stroke-width="2" 
        stroke-linecap="round" 
        stroke-linejoin="round" 
        class={`w-4 h-4 ${i < rating ? 'text-yellow-400 fill-current' : 'text-gray-300'}`}
        
      >
        <path d="M11.525 2.295a.53.53 0 0 1 .95 0l2.31 4.679a2.123 2.123 0 0 0 1.595 1.16l5.166.756a.53.53 0 0 1 .294.904l-3.736 3.638a2.123 2.123 0 0 0-.611 1.878l.882 5.14a.53.53 0 0 1-.771.56l-4.618-2.428a2.122 2.122 0 0 0-1.973 0L6.396 21.01a.53.53 0 0 1-.77-.56l.881-5.139a2.122 2.122 0 0 0-.611-1.879L2.16 9.795a.53.53 0 0 1 .294-.906l5.165-.755a2.122 2.122 0 0 0 1.597-1.16z"></path>
      </svg>
    ))}
  </div>

  <!-- Testimonial with Quote Icon -->
  <div class="relative">
    <svg 
      xmlns="http://www.w3.org/2000/svg" 
      width="24" 
      height="24" 
      viewBox="0 0 24 24" 
      fill="none" 
      stroke="currentColor" 
      stroke-width="2" 
      stroke-linecap="round" 
      stroke-linejoin="round" 
      class="w-6 h-6 text-primary/30 absolute -top-2 -left-1"
    >
      <path d="M16 3a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2 1 1 0 0 1 1 1v1a2 2 0 0 1-2 2 1 1 0 0 0-1 1v2a1 1 0 0 0 1 1 6 6 0 0 0 6-6V5a2 2 0 0 0-2-2z"></path>
      <path d="M5 3a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2 1 1 0 0 1 1 1v1a2 2 0 0 1-2 2 1 1 0 0 0-1 1v2a1 1 0 0 0 1 1 6 6 0 0 0 6-6V5a2 2 0 0 0-2-2z"></path>
    </svg>
    <blockquote class="text-gray-600 italic pl-6 leading-relaxed">
      "{testimonial}"
    </blockquote>
  </div>

  <!-- Hover Effect Gradient Bar -->
  <div class="mt-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
    <div class="h-1 bg-gradient-to-r from-primary to-blue-400 rounded-full"></div>
  </div>
</div>