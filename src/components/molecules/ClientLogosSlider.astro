---
export interface Props {
  className?: string;
}

const { className = '' } = Astro.props;

const clientLogos = [
  {
    src: '/emoj.webp',
    alt: 'EMOJ - Cliente BIM 3D Studio',
    name: 'EMOJ'
  },
  {
    src: '/esval.webp',
    alt: 'ESVAL - Cliente BIM 3D Studio',
    name: 'ESVAL'
  },
  {
    src: '/inwasser.webp',
    alt: 'INWASSER - Cliente BIM 3D Studio',
    name: 'INWASSER'
  }
];
---

<div class={`relative overflow-hidden bg-white py-8 ${className}`}>
  <!-- Degradados en los extremos -->
  <div class="absolute left-0 top-0 bottom-0 w-20 bg-gradient-to-r from-white to-transparent z-10 pointer-events-none"></div>
  <div class="absolute right-0 top-0 bottom-0 w-20 bg-gradient-to-l from-white to-transparent z-10 pointer-events-none"></div>
  
  <div class="flex animate-scroll">
    <!-- Primera serie de logos -->
    <div class="flex items-center justify-around min-w-full">
      {clientLogos.map((logo) => (
        <div class="flex-shrink-0 mx-16 lg:mx-20">
          <img 
            src={logo.src}
            alt={logo.alt}
            class="h-16 md:h-20 lg:h-24 w-auto object-contain filter grayscale hover:grayscale-0 transition-all duration-300 opacity-70 hover:opacity-100"
            loading="lazy"
          />
        </div>
      ))}
    </div>
    
    <!-- Segunda serie de logos para continuidad (sin espacio adicional) -->
    <div class="flex items-center justify-around min-w-full">
      {clientLogos.map((logo) => (
        <div class="flex-shrink-0 mx-16 lg:mx-20">
          <img 
            src={logo.src}
            alt={logo.alt}
            class="h-16 md:h-20 lg:h-24 w-auto object-contain filter grayscale hover:grayscale-0 transition-all duration-300 opacity-70 hover:opacity-100"
            loading="lazy"
          />
        </div>
      ))}
    </div>
  </div>
</div>

<style>
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }
  
  .animate-scroll {
    animation: scroll 25s linear infinite;
  }
  
  .animate-scroll:hover {
    animation-play-state: paused;
  }
</style>