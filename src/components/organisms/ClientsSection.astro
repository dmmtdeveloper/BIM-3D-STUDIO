---
import TestimonialCard from '../molecules/TestimonialCard.astro';
import ClientLogosSlider from '../molecules/ClientLogosSlider.astro';
import { testimonials } from '../../data/testimonials';
---

<section id="clients" class="py-20 bg-gray-50">
  <div class="max-w-[100rem] mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-primary mb-4">
        Nuestros Clientes
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto mb-12">
        Colaboramos con las empresas más prestigiosas del sector, entregando soluciones BIM que superan expectativas
      </p>
    </div>
    
    <!-- Slider de Logos de Clientes -->
    <div class="mb-20">
      <!-- <h3 class="text-2xl font-semibold text-center text-gray-800 mb-8">
        Empresas que confían en nosotros
      </h3> -->
      <ClientLogosSlider className="rounded-xl shadow-sm border border-gray-200" />
    </div>
    
    <!-- Testimoniales -->
    <div>
      <h3 class="text-2xl font-semibold text-center text-gray-800 mb-12">
        Lo que dicen nuestros clientes
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {testimonials.map((testimonial) => (
          <TestimonialCard {...testimonial} />
        ))}
      </div>
    </div>
  </div>
</section>