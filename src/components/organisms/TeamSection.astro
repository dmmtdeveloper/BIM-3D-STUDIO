---
import TeamMemberModal from '../molecules/TeamMemberModal.astro';
import TeamMemberCard from '../molecules/TeamMemberCard.astro';
import { teamMembers } from '../../data/teamMembers';


// Obtener todos los miembros del equipo desde la fuente de datos centralizada
const members = teamMembers;
---

<section id="team" class="py-20 bg-accent/5">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16" style="opacity: 1; transform: none;">
      <h2 class="text-4xl md:text-5xl font-bold text-foreground mb-6">
        Nuestro Equipo
      </h2>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
        Profesionales altamente cualificados con expertise en las últimas tecnologías BIM y años de experiencia en proyectos de gran escala
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8" style="opacity: 1;">
      {members.map((member, index) => (
        <TeamMemberCard member={member} index={index} />
      ))}
    </div>
  </div>
</section>

<!-- Modales para cada miembro del equipo -->
{members.map(member => (
  <TeamMemberModal isOpen={false} member={member} />
))}

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const teamCards = document.querySelectorAll('.team-member-card');
    
    teamCards.forEach(card => {
      card.addEventListener('click', () => {
        const memberId = card.getAttribute('data-member-id');
        const modal = document.getElementById(`team-member-modal-${memberId}`);
        const modalContent = modal?.querySelector('div');
        
        if (modal && modalContent) {
          modal.style.setProperty('opacity', '1');
          modal.style.setProperty('pointer-events', 'auto');
          modalContent.style.setProperty('transform', 'scale(1)');
        }
      });
    });
    
    // Cerrar modales
    const closeButtons = document.querySelectorAll('[id^="close-team-modal"]');
    closeButtons.forEach(button => {
      button.addEventListener('click', () => {
        const modal = button.closest('[id^="team-member-modal"]');
        const modalContent = modal?.querySelector('div');
        
        if (modal && modalContent) {
          (modal as HTMLElement).style.setProperty('opacity', '0');
          (modal as HTMLElement).style.setProperty('pointer-events', 'none');
          modalContent.style.setProperty('transform', 'scale(0.95)');
        }
      });
    });
  });
</script>