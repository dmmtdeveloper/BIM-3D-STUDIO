    </div>
  </div>
</section>

<!-- Team Member Modal -->
<TeamMemberModal isOpen={false} member={teamMember} />

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const teamCard = document.querySelector('.team-member-card');
    const modal = document.getElementById('team-member-modal');
    const modalContent = modal?.querySelector('div');
    
    teamCard?.addEventListener('click', () => {
      modal?.style.setProperty('opacity', '1');
      modal?.style.setProperty('pointer-events', 'auto');
      modalContent?.style.setProperty('transform', 'scale(1)');
    });
  });
</script>