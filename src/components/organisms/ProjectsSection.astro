                {project.year}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  class ProjectsFilter {
    private filterButtons: NodeListOf<HTMLElement>;
    private projectCards: NodeListOf<HTMLElement>;

    constructor() {
      this.filterButtons = document.querySelectorAll('.filter-btn');
      this.projectCards = document.querySelectorAll('.project-card');
      this.init();
    }

    private init() {
      this.filterButtons.forEach(button => {
        button.addEventListener('click', () => {
          const category = button.getAttribute('data-category');
          this.filterProjects(category!);
          this.updateActiveButton(button);
        });
      });
    }

    private filterProjects(category: string) {
      this.projectCards.forEach(card => {
        const cardCategory = card.getAttribute('data-category');
        
        if (category === 'Todos' || cardCategory === category) {
          card.style.display = 'block';
          // Animate in
          setTimeout(() => {
            (card as HTMLElement).style.opacity = '1';
            (card as HTMLElement).style.transform = 'scale(1)';
          }, 100);
        } else {
          // Animate out
          (card as HTMLElement).style.opacity = '0';
          (card as HTMLElement).style.transform = 'scale(0.95)';
          setTimeout(() => {
            card.style.display = 'none';
          }, 300);
        }
      });
    }

    private updateActiveButton(activeButton: HTMLElement) {
      this.filterButtons.forEach(button => {
        button.className = 'px-6 py-2 rounded-full font-medium transition-all duration-300 filter-btn bg-white text-gray-700 hover:bg-gray-100 border border-gray-200';
      });
      
      activeButton.className = 'px-6 py-2 rounded-full font-medium transition-all duration-300 filter-btn bg-primary text-white shadow-lg';
    }
  }

  // Initialize filter when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    new ProjectsFilter();
  });
</script>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .project-card {
    opacity: 1;
    transform: scale(1);
    transition: opacity 0.3s ease, transform 0.3s ease;
  }
