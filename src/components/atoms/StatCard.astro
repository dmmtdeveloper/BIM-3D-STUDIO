---
export interface Props {
  number: string;
  label: string;
  highlight?: boolean;
}

const { number, label, highlight = false } = Astro.props;
---

<div class={`text-center p-6 rounded-lg ${highlight ? 'bg-primary-50 border border-primary-200' : 'bg-white'}`}>
  <div class={`text-4xl font-bold mb-2 ${highlight ? 'text-primary-600' : 'text-secondary-900'}`}>
    {number}
  </div>
  <div class="text-secondary-600 font-medium">
    {label}
  </div>
</div> 